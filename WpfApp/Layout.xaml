<Grid xmlns="root" Background="White" xmlns:local="using:WpfApp;assembly=WpfApp">
    <Grid.DataContext>
        <local:SampleViewModel />
    </Grid.DataContext>
    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
    </Grid.RowDefinitions>
    <Grid Background="Red"/>
    <StackPanel Grid.Column="1" VerticalAlignment="Center" >
        <!--<TextBlock Text="{Binding Text}" />-->
        <TextBox Text="{Binding WrittenText}" />
    </StackPanel>
    <Grid Grid.Column="0" Grid.Row="1" Background="Yellow"/>
    <Border Margin="8" Grid.Column="1" Grid.Row="1" Background="Gold" BorderBrush="Black" BorderThickness="2" CornerRadius="6"/>
    <!--<Button Command="Something" Grid.Column="1" Grid.Row="1"/>-->
</Grid>
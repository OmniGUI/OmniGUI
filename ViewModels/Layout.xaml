<Grid xmlns="root" Background="GhostWhite" xmlns:local="using:Common;assembly=Common">

    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <List Source="{Bind People}" Margin="15">
        <List.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image Source="mario.png" />
                    <TextBlock Margin="15" VerticalAlignment="Center" Grid.Column="1" Text="{Bind Name}" />
                </Grid>
            </DataTemplate>
        </List.ItemTemplate>
    </List>

    <StackPanel Grid.Column="1" Margin="15">
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock FontWeight="Bold" Text="Name:"></TextBlock>
            <TextBox Grid.Column="1" Text="{Bind Name, LinkMode=FullLink}" />
        </Grid>
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock FontWeight="Bold" Text="Surname:"></TextBlock>
            <TextBox Grid.Column="1" Text="{Bind Surname, LinkMode=FullLink}" />
        </Grid>
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock FontWeight="Bold" Text="Identifier:" />
            <TextBlock Grid.Column="1" Text="12345678" HorizontalAlignment="Center" />
        </Grid>
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock FontWeight="Bold" Text="Image:" />
        </Grid>
    </StackPanel>

</Grid>